{% extends "layout.html.twig" %}

{% block content %}
	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
            <h1 class="mt-4">MATERIALES</h1>
				<div class="card mb-4">
					<div class="card-header">
						<i class="fas fa-table me-1"></i>
						
					</div>
					<div class="card-body">
						<table id="datatablesSimple">
							<thead>
								<tr>
									<th>Id</th>
									<th>Nombre</th>
									<th>Stock</th>
									<th>Armario</th>
									<th></th>
									<th></th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Id</th>
									<th>Nombre</th>
									<th>Stock</th>
									<th>Armario</th>
									<th></th>
									<th></th>
								</tr>
							</tfoot>
							<tbody>
								{% for task in data %}
									<tr>
										<td>{{task.id}}</td>
										<td>{{task.nombre}}</td>
										<td>{{task.stock}}</td>
										<td>{{task.armario}}</td>
                                        <td><a href="/actualizarMaterial/{{task.id}}">Actualizar</a></td>
                                        <td><a href="/eliminarMaterial/{{task.id}}">Eliminar</a></td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</main>
	{% endblock %}
